@page
@model GroceryStore.Pages.FruitsPageModel
@{
    ViewData["Title"] = "Groceries";
}

<div class="text-center">
    <h1 id="store-name"><img id="cart" class="mr-2" src="~/images/cart.png">Grocer.ly</h1>
    <p>Browse our inventory online and shop in-store!</p>
</div>

<hr />

<h2 class="text-center">Fruits</h2>

<hr />

<div id="food-container">
    <!-- Loop through Model.Foods -->
    @foreach (var food in Model.Foods)
    {
        <div class="container">
            <div class="col-3 pl-1 pr-1 text-center" id="image-col">
                <img class="food-item-image" src=@food.ImageSrc alt=@food.Name>
            </div>

            <div class="col-6 pl-1 pr-1" id="info-col">
                <p class="food-item-info">@food.Name.Replace("-", " ")</p>
                <p id="food-price" class="food-item-info">$@String.Format("{0:0.00} / lb", food.Price)</p>
            </div>

            <div class="col-3 pl-1 pr-1 text-center" id="button-col">
                <a asp-page="/Details" asp-route-name=@System.Web.HttpUtility.UrlPathEncode(food.Name) class="btn text"><i class="fas fa-info-circle"></i></a>
            </div>
        </div>
    }
</div>

